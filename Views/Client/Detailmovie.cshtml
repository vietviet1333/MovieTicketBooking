        }

    .tor {
        width: 70%;
    }

    .moti {
        width: 100%;
        height: 40px;
        border-bottom: 1px solid rgb(185, 185, 185);
        font-size: 23px;
        font-weight: bold
    }

    .inf {
        display: flex;
        margin-top: 20px;
    }

    .infl {
        font-weight: bold;
        width: 20%;
    }

        .infl div {
