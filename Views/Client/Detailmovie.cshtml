    .btn-end button {
        border: none;
        background-color: #fe7900;
        color: white;
        border-radius: 5px;
        margin-top: 20px;
        height: 30px;
    }

        .btn-end button:hover {
            cursor: pointer;
            border: none;
            background-color: #000648;
            color: white;
        }

    .bot {
        width: 100%;
        margin-top: 20px;
    }

    .det {
