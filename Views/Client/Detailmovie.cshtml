        font-weight: bold;
        color: rgb(53, 53, 53);
        border-bottom: 3px solid #fe7900;
        padding-bottom: 10px;
        font-weight: bold;
    }

    .phim-content {
        width: 100%;
    }

    .to {
        display: flex;
        width: 100%;
        justify-content: space-evenly;
        margin-top: 40px;
    }

    .tol {
        height: auto;
        width: 25%;
    }

